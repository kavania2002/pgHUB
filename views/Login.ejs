<%- include('header'); -%>

    <main>
        <!-- <div id="main-features"></div> -->
        <div id="main-login">
            <form id="login-form" method="POST", action="/login">
                <h2>Login</h2>
                <input type="email" class="login-feild" placeholder="E-mail*" name="username" required>
                <input type="password" class="login-feild" placeholder="Password*" name="password" required>
                <div style="display: inline;"><input type="submit" id="login-submit">
                    <button id="login-submit" onclick="openSignup()">Sign Up</button>
                </div>
                <label><%= message %> </label>
            </form>
        </div>
        <div id="main-signup">
            <form id="signup-form" method="POST", action="/register">
                <h2>Sign up</h2>
                <input type="email" class="login-feild" placeholder="E-mail*" name="username" required>
                <input type="password" class="login-feild" placeholder="Password*" name="password" required>
                <div style="display: inline;"><input type="submit" id="login-submit">
                    <button id="login-submit" onclick="openLogin()">Login</button>
                </div>
                <label><%= message %> </label>
            </form>
        </div>
    </main>
    <script>
        function openSignup() {
            document.getElementById("main-signup").style.display = "flex";
            document.getElementById("main-login").style.display = "none";
        }
        function openLogin() {
            document.getElementById("main-signup").style.display = "none";
            document.getElementById("main-login").style.display = "flex";
        }
    </script>
    <%- include('footer'); -%>